<LoginScreen>:
    GridLayout:
        cols: 1
        rows: 3
        spacing: '10dp'
        padding: dp(50), dp(200)
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            MDTextField:
                id: username
                multiline: False
                mode: "fill"
                hint_text: 'Введите ваш логин'
                required: True
                helper_text_mode: "on_error"
                on_text_validate: root.focus_passwd()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            MDTextField:
                id: passwd
                multiline: False
                mode: "fill"
                hint_text: 'Введите ваш пароль'
                password: True
                required: True
                helper_text_mode: "on_error"
                on_text_validate: root.on_login()
        AnchorLayout:
            anchor_x: 'center'
            MDFlatButton:
                id: login
                md_bg_color: app.theme_cls.primary_color
                text: 'Войти'
                on_press: root.on_login()

